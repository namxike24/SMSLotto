<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smsanalytic.lotto.ui.debt.AnalyticDebtFragment">

    <TextView
        android:fontFamily="sans-serif-medium"
        android:layout_margin="5dp"
        android:textSize="14sp"
        android:textColor="@color/back_1"
        android:text="Dữ liệu tính toán"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@drawable/bg_border_gray_full_3dp"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/back_1"
                android:text="Từ ngày: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rlDateFrom"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:background="@drawable/bg_border_gray_3dp"
                android:orientation="horizontal"
                android:padding="7dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvDateFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05-04-2020"
                    android:textColor="@color/back_1"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"

                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/ic_down_arrow"
                    android:tint="@color/back_1" />
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/back_1"
                android:text="Đến ngày: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rlDateTo"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:background="@drawable/bg_border_gray_3dp"
                android:orientation="horizontal"
                android:padding="7dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvDateTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05-04-2020"
                    android:textColor="@color/back_1"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/ic_down_arrow"
                    android:tint="@color/back_1" />
            </RelativeLayout>

        </RelativeLayout>
        <Button
            android:id="@+id/btnLayDuLieu"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:text="Lấy dữ liệu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:fontFamily="sans-serif-medium"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:textColor="@color/back_1"
        android:text="Chi tiết"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <HorizontalScrollView
        android:id="@+id/horizontalView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

        <TableLayout
            android:id="@+id/tbPhanTich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </HorizontalScrollView>
    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/red"
          android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:gravity="center"
        android:text="Click vào từng khách hàng để xem chi tiết\n (Vuốt qua phải để xem được hết)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
