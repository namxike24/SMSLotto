<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smsanalytic.lotto.ui.setting.SettingKyTuSMSGuiDiActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btnBack"
            android:singleLine="true"
            android:text="Cài đặt bảo mật"
            android:textColor="@color/line_1_gray"
            android:textSize="16sp"
              android:fontFamily="sans-serif-medium" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Mật khẩu đăng nhập"
            android:textColor="@color/back_1"
            android:textSize="16sp"
              android:fontFamily="sans-serif-medium" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_border_gray_full_3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:weightSum="2">
                <TextView
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Mật khẩu"
                    android:textSize="14sp"
                    android:textColor="@color/back_1"/>
                <EditText
                    android:id="@+id/edPass"
                    android:paddingStart="8dp"
                    android:hint="Nhập mật khẩu"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_border_gray_full_3dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Xác nhận mật khẩu"
                    android:textSize="14sp"
                    android:textColor="@color/back_1"/>
                <EditText
                    android:id="@+id/edConfirmPass"
                    android:paddingStart="8dp"
                    android:inputType="textPassword"
                    android:hint="Nhập lại mật khẩu"
                    android:background="@drawable/bg_border_gray_full_3dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Mật khẩu xóa dữ liệu"
            android:textColor="@color/back_1"
            android:textSize="16sp"
              android:fontFamily="sans-serif-medium" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_border_gray_full_3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:weightSum="2">
                <TextView
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Mật khẩu"
                    android:textSize="14sp"
                    android:textColor="@color/back_1"/>
                <EditText
                    android:id="@+id/edPassDelete"
                    android:paddingStart="8dp"
                    android:hint="Nhập mật khẩu"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_border_gray_full_3dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Xác nhận mật khẩu"
                    android:textSize="14sp"
                    android:textColor="@color/back_1"/>
                <EditText
                    android:id="@+id/edConfirmPassDelete"
                    android:paddingStart="8dp"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_border_gray_full_3dp"
                    android:layout_weight="1"
                    android:hint="Nhập lại mật khẩu"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Chú ý"
            android:textColor="@color/red"
            android:textSize="16sp"
              android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_border_gray_full_3dp"
            android:padding="5dp"
            android:text=" Khi bạn đăng nhập vào hệ thống thì có 2 lựa chọn\n  - Nhập mật khẩu đăng nhập để vào ứng dụng\n  - Nhập mật khẩu xóa dữ liệu để xóa toàn bộ dữ liệu"
            android:textColor="@color/back_1"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:background="@drawable/bg_border_green_3dp"
        android:gravity="center"
        android:text="Cập Nhật"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>
