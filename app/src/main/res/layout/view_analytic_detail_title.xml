<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.55"
        android:background="@drawable/border_row_title"
        android:gravity="center"
        android:padding="4dp"
        android:text="Ngày"
        android:textColor="@color/blue_2"
        android:textSize="13sp"
          android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/tvDe"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:background="@drawable/border_row_title"
        android:gravity="center"
        android:padding="4dp"
        android:text="Đề (Nghìn)"
        android:textColor="@color/blue_2"
        android:textSize="13sp"
          android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/tvLo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:background="@drawable/border_row_title"
        android:gravity="center"
        android:padding="4dp"
        android:text="Lô (Nghìn)"
        android:textColor="@color/blue_2"
        android:textSize="13sp"
          android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/tvXien"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:background="@drawable/border_row_title"
        android:gravity="center"
        android:padding="4dp"
        android:text="Xiên (Nghìn)"
        android:textColor="@color/blue_2"
        android:textSize="13sp"
          android:fontFamily="sans-serif-medium" />
    <TextView
        android:id="@+id/tvBaCang"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:background="@drawable/border_row_title"
        android:gravity="center"
        android:padding="4dp"
        android:text="Ba Cang (Nghìn)"
        android:textColor="@color/blue_2"
        android:textSize="13sp"
          android:fontFamily="sans-serif-medium" />
    <TextView
        android:id="@+id/tvTatCa"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:background="@drawable/border_row_title"
        android:gravity="center"
        android:padding="4dp"
        android:text="Tất cả (Nghìn)"
        android:textColor="@color/blue_2"
        android:textSize="13sp"
          android:fontFamily="sans-serif-medium" />
</TableRow>