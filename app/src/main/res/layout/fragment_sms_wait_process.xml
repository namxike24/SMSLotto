<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smsanalytic.lotto.ui.smsProcess.SmsWaitProcessFragment">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:id="@+id/lnMainLayout"
           android:layout_margin="8dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_marginTop="16dp"
               android:textColor="@color/back_1"
               android:id="@+id/tvUserName"
                 android:fontFamily="sans-serif-medium"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="14sp"
               android:text="FaceBook - Tai Nguyen Cong"
               />
           <RelativeLayout
               android:layout_marginTop="8dp"
               android:orientation="vertical"
               android:background="@drawable/bg_border_gray_full_3dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/tvSms"
                   android:layout_marginEnd="8dp"
                   android:layout_toStartOf="@+id/imageArrowDown"
                   android:textColor="@color/back_1"
                   android:textSize="14sp"
                   android:layout_marginStart="5dp"
                   android:text="Nội dung tin nhắn gốc"
                   android:layout_marginTop="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:layout_toStartOf="@+id/imageArrowDown"
                   android:id="@+id/tvSmsRoot"
                   android:layout_marginStart="5dp"
                   android:layout_marginBottom="8dp"
                   android:textColor="@color/back_1"
                   android:textSize="14sp"
                   android:layout_below="@+id/tvSms"
                   android:layout_marginTop="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
               <ImageView
                   android:id="@+id/imageArrowDown"
                   android:layout_centerVertical="true"
                   android:tint="@color/gray"
                   android:src="@drawable/ic_down_arrow"
                   android:layout_marginEnd="8dp"
                   android:layout_alignParentEnd="true"
                   android:layout_width="16dp"
                   android:layout_height="16dp"/>
           </RelativeLayout>
           <TextView
               android:layout_marginTop="16dp"
               android:textColor="@color/back_1"
                 android:fontFamily="sans-serif-medium"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="14sp"
               android:text="Xử lý tin nhắn"
               />
           <EditText
               android:gravity="start"
               android:padding="5dp"
               android:id="@+id/edtSmsProcessed"
               android:layout_marginTop="5dp"
               android:minHeight="100dp"
               android:background="@drawable/bg_border_gray_full_3dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <LinearLayout
               android:layout_marginTop="10dp"
               android:weightSum="3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <Button
                   android:id="@+id/btnRestore"
                   android:layout_gravity="center_vertical"
                   android:text="Phục hồi tin gốc"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="60dp"/>

               <Button
                   android:id="@+id/btnSaveSmsEmpty"
                   android:layout_gravity="center_vertical"
                   android:text="Lưu tin trống"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="60dp"/>
               <Button
                   android:id="@+id/btnProcessAndSave"
                   android:layout_gravity="center_vertical"
                   android:text="Xử lý và lưu"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="60dp"/>
           </LinearLayout>
           <TextView
               android:visibility="gone"
               android:id="@+id/tvError"
               android:textSize="14dp"
               android:textColor="@color/red"
               android:layout_marginTop="16dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </LinearLayout>

   </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/mes_empty"
        android:padding="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_centerInParent="true"
        android:textColor="@color/back_1"
        android:textSize="16dp"
        android:text="- Hiện không có tin nhắn nào đã xử lý thành công\n- Tin xử lý thành công là những tin đúng cú pháp mà phần mềm tự động xử lý được và những tin sai cú pháp đã được sửa lại đúng cú pháp"
        android:layout_gravity="center"
        android:background="@drawable/bg_border_gray_3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
