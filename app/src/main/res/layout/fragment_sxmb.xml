<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.xsmb.SXMBFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:text="Kết Quả XSMB Mở Thưởng Ngày"
                    android:textColor="@color/red_light"
                      android:fontFamily="sans-serif-medium"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/rlDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/bg_border_gray_3dp"
                    android:orientation="horizontal"
                    android:padding="7dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05-04-2020"
                        android:textColor="@color/back_1"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"

                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/ic_down_arrow"
                        android:tint="@color/back_1" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray"/>
            <LinearLayout
                android:id="@+id/lnData"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/blue_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/bg_transparent_border_gray"
                        android:gravity="center"
                        android:text="Đặc Biệt"
                        android:textColor="@color/red_light"
                        android:textSize="14sp"
                          android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvGiaiDB"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@drawable/bg_transparent_border_gray"
                        android:gravity="center"
                        android:textColor="@color/red_light"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/gray_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/bg_transparent_border_gray"
                        android:gravity="center"
                        android:text="Giải Nhất"
                        android:textColor="@color/back_1"
                        android:textSize="14sp"
                          android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvGiaiNhat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@drawable/bg_transparent_border_gray"
                        android:gravity="center"
                        android:textColor="@color/back_1"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/blue_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/bg_transparent_border_gray"
                        android:gravity="center"
                        android:text="Giải Nhì"
                        android:textColor="@color/back_1"
                        android:textSize="14sp"
                          android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvGiaiNhi1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.35"
                        android:background="@drawable/bg_transparent_border_gray"
                        android:gravity="center"

                        android:textColor="@color/back_1"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvGiaiNhi2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.35"
                        android:background="@drawable/bg_transparent_border_gray"
                        android:gravity="center"
                        android:textColor="@color/back_1"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="112dp"
                    android:background="@color/gray_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/bg_transparent_border_gray"
                        android:gravity="center"
                        android:text="Giải Ba"
                        android:textColor="@color/back_1"
                        android:textSize="14sp"
                          android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvGiaiBa1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.35"
                                android:background="@drawable/bg_transparent_border_gray"
                                android:gravity="center"

                                android:textColor="@color/back_1"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvGiaiBa2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.35"
                                android:background="@drawable/bg_transparent_border_gray"
                                android:gravity="center"
                                android:textColor="@color/back_1"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvGiaiBa3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.35"
                                android:background="@drawable/bg_transparent_border_gray"
                                android:gravity="center"
                                android:textColor="@color/back_1"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvGiaiBa4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.35"
                                android:background="@drawable/bg_transparent_border_gray"
                                android:gravity="center"

                                android:textColor="@color/back_1"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvGiaiBa5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.35"
                                android:background="@drawable/bg_transparent_border_gray"
                                android:gravity="center"
                                android:textColor="@color/back_1"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvGiaiBa6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.35"
                                android:background="@drawable/bg_transparent_border_gray"
                                android:gravity="center"
                                android:textColor="@color/back_1"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/blue_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/bg_transparent_border_gray"
                        android:gravity="center"
                        android:text="Giải Tư"
                        android:textColor="@color/back_1"
                        android:textSize="14sp"
                          android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvGiaiTu1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_transparent_border_gray"
                            android:gravity="center"

                            android:textColor="@color/back_1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvGiaiTu2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_transparent_border_gray"
                            android:gravity="center"
                            android:textColor="@color/back_1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvGiaiTu3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_transparent_border_gray"
                            android:gravity="center"

                            android:textColor="@color/back_1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvGiaiTu4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_transparent_border_gray"
                            android:gravity="center"
                            android:textColor="@color/back_1"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="112dp"
                    android:background="@color/gray_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/bg_transparent_border_gray"
                        android:gravity="center"
                        android:text="Giải Năm"
                        android:textColor="@color/back_1"
                        android:textSize="14sp"
                          android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvGiaiNam1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.35"
                                android:background="@drawable/bg_transparent_border_gray"
                                android:gravity="center"

                                android:textColor="@color/back_1"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvGiaiNam2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.35"
                                android:background="@drawable/bg_transparent_border_gray"
                                android:gravity="center"
                                android:textColor="@color/back_1"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvGiaiNam3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.35"
                                android:background="@drawable/bg_transparent_border_gray"
                                android:gravity="center"
                                android:textColor="@color/back_1"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvGiaiNam4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.35"
                                android:background="@drawable/bg_transparent_border_gray"
                                android:gravity="center"

                                android:textColor="@color/back_1"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvGiaiNam5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.35"
                                android:background="@drawable/bg_transparent_border_gray"
                                android:gravity="center"
                                android:textColor="@color/back_1"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvGiaiNam6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.35"
                                android:background="@drawable/bg_transparent_border_gray"
                                android:gravity="center"
                                android:textColor="@color/back_1"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/blue_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/bg_transparent_border_gray"
                        android:gravity="center"
                        android:text="Giải Sáu"
                        android:textColor="@color/back_1"
                        android:textSize="14sp"
                          android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvGiaiSau1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_transparent_border_gray"
                            android:gravity="center"

                            android:textColor="@color/back_1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvGiaiSau2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_transparent_border_gray"
                            android:gravity="center"
                            android:textColor="@color/back_1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvGiaiSau3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_transparent_border_gray"
                            android:gravity="center"

                            android:textColor="@color/back_1"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/gray_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/bg_transparent_border_gray"
                        android:gravity="center"
                        android:text="Giải Bảy"
                        android:textColor="@color/back_1"
                        android:textSize="14sp"
                          android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvGiaiBay1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_transparent_border_gray"
                            android:gravity="center"

                            android:textColor="@color/back_1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvGiaiBay2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_transparent_border_gray"
                            android:gravity="center"
                            android:textColor="@color/back_1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvGiaiBay3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_transparent_border_gray"
                            android:gravity="center"

                            android:textColor="@color/back_1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvGiaiBay4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_transparent_border_gray"
                            android:gravity="center"
                            android:textColor="@color/back_1"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:id="@+id/lnNoData"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:minHeight="500dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="12dp"
                android:layout_margin="12dp"
                android:textSize="15sp"
                android:textColor="@color/back_1"
                android:gravity="center"
                android:background="@drawable/border_row"
                android:text="Kết quả sẽ được tự động cập nhật trực tiếp sau 18h15 hàng ngày"/>
        </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnGetData"
        android:textAllCaps="false"
          android:fontFamily="sans-serif-medium"
        android:textSize="15sp"
        android:text="Lấy lại kết quả"
        android:textColor="@color/white"
        android:background="@drawable/bg_border_green_3dp"
        android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>