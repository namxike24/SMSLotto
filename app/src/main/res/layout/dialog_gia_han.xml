<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Gia hạn tài khoản"
        android:textColor="@color/back_1"
        android:textSize="16sp"
          android:fontFamily="sans-serif-medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Tên KH:"
            android:textColor="@color/back_1"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:textColor="@color/back_1"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Mã:"
            android:textColor="@color/back_1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvMa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="01213456"
            android:textColor="@color/back_1"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Ngày hết hạn:"
            android:textColor="@color/back_1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvNgayHetHan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="01213456"
            android:textColor="@color/back_1"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Gia hạn đến:"
            android:textColor="@color/back_1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvGiaHanDen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:padding="5dp"
            android:background="@drawable/border_row"
            android:text="01213456"
              android:fontFamily="sans-serif-medium"
            android:textColor="@color/blue_dark"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_border_green_3dp"
        android:text="Cập nhật"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>